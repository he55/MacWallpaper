<Window x:Class="MacWallpaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacWallpaper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="640"
         xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <ui:GridView x:Name="gridView" HorizontalAlignment="Left" Width="500">
            <ui:GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Width="107" Margin="5">
                        <Border CornerRadius="4" Width="107" Height="65">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding previewImage}"/>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="{Binding str1}" HorizontalAlignment="Center" FontSize="10" FontWeight="Bold" Margin="0,2,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ui:GridView.ItemTemplate>
        </ui:GridView>
        <Button Content="Button" Margin="538,36,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
